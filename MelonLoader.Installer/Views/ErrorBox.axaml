<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Class="MelonLoader.Installer.Views.ErrorBox"
    Title="Error"
    Icon="/Assets/icon.ico"
    WindowStartupLocation="CenterScreen"
    Background="#121217"
    CanResize="False"
    Padding="15"
    Height="100"
    SizeToContent="WidthAndHeight"
    RenderOptions.BitmapInterpolationMode="HighQuality">
    <Grid ColumnDefinitions="50, 20, *" RowDefinitions="auto, auto">
        <Image Grid.Column="0" Grid.Row="0" Source="/Assets/error.png" />
        <TextBlock Name="Message" Grid.Column="2" VerticalAlignment="Center" FontSize="15" Text="2gfdfgdsaffsdfsdfsdf" />
        <Button Grid.Column="2" Grid.Row="1" HorizontalAlignment="Right" Click="OkHandler">Ok</Button>
    </Grid>
</Window>